<!DOCTYPE html>
<html>
<head>
  <title>Parent Gateway</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <%= render "shared/nav" %>
  <%= yield %>

  <% if I18n.locale == :en %>
    English
  <% else %>
    <%= link_to "English", url_for(locale: nil) %>
  <% end %>
  |
  <% if I18n.locale == :es %>
    Español
  <% else %>
    <%= link_to "Español", url_for(locale: :es) %>
  <% end %>

</body>
</html>
