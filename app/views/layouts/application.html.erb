<!DOCTYPE html>
<html>
<head>
  <title>Parent Gateway</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <%= render "shared/nav" %>
  <div class="usa-grid">
   <% flash.each do |key, value| %>
      <div class="usa-alert usa-alert-<%= usa_flash_class(key) %>"><%= value %></div>
    <% end %>
  <%= yield %>

  <% if I18n.locale == :en %>
    English
  <% else %>
    <%= link_to "English", url_for(locale: nil) %>
  <% end %>
  |
  <% if I18n.locale == :es %>
    Español
  <% else %>
    <%= link_to "Español", url_for(locale: :es) %>
  <% end %>

  </div>

  <%= javascript_include_tag 'application' %>
</body>
</html>
