<nav>
  <div class="usa-grid">
    <div class="nav-controls">
      <%= link_to root_path, class: "logo-container pull-left" do %>
        <img src="/images/chhslogo.png" alt="CHHS logo" />
      <% end %>
      <a class="nav-toggle pull-right" href="#">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </a>
    </div>

    <% if current_user %>
      <ul>
        <li>
          <%= link_to t("nav_messages"), "#" %>
        </li>
        <li>
          <%= link_to t("nav_map"), root_path %>
        </li>
        <li>
          <%= link_to t("nav_logout"),
            destroy_session_path(:user),
            method: :delete,
            class: "text-center" %>
        </li>
      </ul>
    <% else %>
      <ul>
        <li>
          <%= link_to t("nav_log_in"), new_session_path(:user) %>
        </li>
        <li>
          <%= link_to t("nav_sign_up"),
            new_registration_path(:user),
            class: "with-border"
          %>
        </li>
      </ul>
    <% end %>
  </div>
</nav>
